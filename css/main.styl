.Centro
	display flex
	display -webkit-flex
	margin 0 auto
	max-width 1200px
	padding-top 1.5em
	justify-content space-between
	width 100%
	.Data
		text-align right
		width 55%
		a
			color blanco
			text-decoration none
			padding .2em .6em .2em .6em
